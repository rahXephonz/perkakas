{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "module": "esnext",
    "outDir": "./dist",
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "src/__test__",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
